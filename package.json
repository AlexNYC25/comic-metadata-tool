{
  "name": "comic-metadata-tool",
  "version": "1.1.0",
  "description": "Tool to read/write metadata from comic book files",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "npx vitest --silent=false",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json && node scripts/fix-esm-imports.cjs dist/esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexNYC25/comic-metadata-tool.git"
  },
  "author": "Alexis Montes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlexNYC25/comic-metadata-tool/issues"
  },
  "homepage": "https://github.com/AlexNYC25/comic-metadata-tool#readme",
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "7zip-bin": "^5.2.0",
    "adm-zip": "^0.5.16",
    "fast-xml-parser": "^5.2.1",
    "node-7z": "^3.0.0",
    "node-unrar-js": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.14.1",
    "@types/node-7z": "^2.1.10",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  }
}